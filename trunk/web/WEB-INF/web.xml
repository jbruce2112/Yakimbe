<?xml version="1.0" encoding="UTF-8"?>

<web-app metadata-complete="true" version="2.5" 
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

    <display-name>Yakimbe Web Application</display-name>
    <welcome-file-list>
        <welcome-file>active</welcome-file>
    </welcome-file-list>

    <listener>
        <description>
            Servlet Context Listener
        </description>
        <listener-class>
            com.yakimbe.web.YakimbeContextListener
        </listener-class>
    </listener>

    <listener>
        <description>
            HttpSessionListener
        </description>
        <listener-class>
            com.yakimbe.web.YakimbeSessionListener
        </listener-class>
    </listener>

    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <trim-directive-whitespaces>true</trim-directive-whitespaces>
        </jsp-property-group>
    </jsp-config>

    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <listener>
        <description>HttpSessionAttributeListener</description>
        <listener-class>com.yakimbe.web.SessionAttributeListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>GetUserServlet</servlet-name>
        <servlet-class>com.yakimbe.web.GetUserServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>FacebookLoginServlet</servlet-name>
        <servlet-class>com.yakimbe.web.FacebookLogin</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>FacebookLoginServlet</servlet-name>
        <url-pattern>/fblogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetUserServlet</servlet-name>
        <url-pattern>/user/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>GetItemServlet</servlet-name>
        <servlet-class>com.yakimbe.web.GetItemServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetItemServlet</servlet-name>
        <url-pattern>/submission/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DoCommentServlet</servlet-name>
        <servlet-class>com.yakimbe.web.DoCommentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DoCommentServlet</servlet-name>
        <url-pattern>/comment/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.yakimbe.web.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CreateUserServlet</servlet-name>
        <servlet-class>com.yakimbe.web.CreateUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateUserServlet</servlet-name>
        <url-pattern>/CreateUser</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>GetActiveItems</servlet-name>
        <servlet-class>com.yakimbe.web.GetActiveItemsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetActiveItems</servlet-name>
        <url-pattern>/active/*</url-pattern>
        <url-pattern>/admin/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>GetNewItems</servlet-name>
        <servlet-class>com.yakimbe.web.GetNewItemsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetNewItems</servlet-name>
        <url-pattern>/new/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DoSubmission</servlet-name>
        <servlet-class>com.yakimbe.web.DoSubmissionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DoSubmission</servlet-name>
        <url-pattern>/CreateSubmission/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DoAction</servlet-name>
        <servlet-class>com.yakimbe.web.DoActionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DoAction</servlet-name>
        <url-pattern>/Action/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>VerificationServlet</servlet-name>
        <servlet-class>com.yakimbe.web.AccountVerificationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VerificationServlet</servlet-name>
        <url-pattern>/verification/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AccountEditServlet</servlet-name>
        <servlet-class>com.yakimbe.web.AccountEditServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AccountEditServlet</servlet-name>
        <url-pattern>/accountedit</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>EditSubmissionServlet</servlet-name>
        <servlet-class>com.yakimbe.web.DoEditSubmissionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditSubmissionServlet</servlet-name>
        <url-pattern>/doeditsubmission/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>EditCommentServlet</servlet-name>
        <servlet-class>com.yakimbe.web.DoEditCommentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditCommentServlet</servlet-name>
        <url-pattern>/doeditcomment/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DoChangePasswordServlet</servlet-name>
        <servlet-class>com.yakimbe.web.DoChangePasswordServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DoChangePasswordServlet</servlet-name>
        <url-pattern>/dochangepassword/*</url-pattern>
    </servlet-mapping>
    <!-- JSP Mappings -->
    <servlet>
        <servlet-name>RSSFeed</servlet-name>
        <jsp-file>/WEB-INF/rssfeed.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>RSSFeed</servlet-name>
        <url-pattern>/new.xml</url-pattern>
        <url-pattern>/active.xml</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>EditComment</servlet-name>
        <jsp-file>/editcomment.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditComment</servlet-name>
        <url-pattern>/editcomment/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ChangePassword</servlet-name>
        <jsp-file>/changepassword.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>ChangePassword</servlet-name>
        <url-pattern>/changepassword/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>EditSubmission</servlet-name>
        <jsp-file>/editsubmission.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditSubmission</servlet-name>
        <url-pattern>/editsubmission/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>NewSubmission</servlet-name>
        <jsp-file>/CreateNewSubmission.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>NewSubmission</servlet-name>
        <url-pattern>/newsubmission/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UserLogin</servlet-name>
        <jsp-file>/login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserLogin</servlet-name>
        <url-pattern>/userlogin/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CreateUser</servlet-name>
        <jsp-file>/CreateUser.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateUser</servlet-name>
        <url-pattern>/newuser/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>about</servlet-name>
        <jsp-file>/about.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>about</servlet-name>
        <url-pattern>/about/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>guidelines</servlet-name>
        <jsp-file>/guidelines.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>guidelines</servlet-name>
        <url-pattern>/guidelines/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>account</servlet-name>
        <jsp-file>/account.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>account</servlet-name>
        <url-pattern>/account/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>PrivacyPolicy</servlet-name>
        <jsp-file>/privacy.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>PrivacyPolicy</servlet-name>
        <url-pattern>/privacypolicy/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UserAgreement</servlet-name>
        <jsp-file>/useragreement.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserAgreement</servlet-name>
        <url-pattern>/useragreement/*</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>FirstTimeLogin</servlet-name>
        <jsp-file>/firstlogin.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>FirstTimeLogin</servlet-name>
        <url-pattern>/firstlogin/*</url-pattern>
    </servlet-mapping>

    <!-- Filters -->

    <filter>
        <filter-name>ResponseHeaderFilter</filter-name>
        <filter-class>com.yakimbe.filter.SetResponseHeaderFilter</filter-class>
        <init-param>
            <param-name>Expires</param-name>
            <param-value>2419200000</param-value>
        </init-param>
    </filter>

    <filter>
        <filter-name>LocalAdminFilter</filter-name>
        <filter-class>com.yakimbe.filter.LocalAdminFilter</filter-class>
    </filter>
    
    <filter-mapping>
        <filter-name>LocalAdminFilter</filter-name>
        <url-pattern>/admin</url-pattern>
    </filter-mapping>
    
    <filter-mapping>
        <filter-name>ResponseHeaderFilter</filter-name>
        <url-pattern>*.gif</url-pattern>
    </filter-mapping>

    <resource-ref>
        <description>
            Yakimbe DB
        </description>
        <res-ref-name>
            jdbc/Yakimbe
        </res-ref-name>
        <res-type>
            javax.sql.DataSource
        </res-type>
        <res-auth>
            Container
        </res-auth>
    </resource-ref>
    <resource-ref>
        <description>
            Ref to a factory for javax.mail.session
            instances, preconfigured to connect to SMTP server.
        </description>
        <res-ref-name>
            mail/Session
        </res-ref-name>
        <res-type>
            javax.mail.Session
        </res-type>
        <res-auth>
            Container
        </res-auth>
    </resource-ref>

    <!-- CONTEXT PARAMS -->
    <context-param>
        <param-name>
            adminEmail
        </param-name>
        <param-value>
            webguy@yakimbe.com
        </param-value>
    </context-param>
    <context-param>
        <param-name>
            paramEncoding
        </param-name>
        <param-value>
            UTF-8
        </param-value>
    </context-param>
    <context-param>
        <param-name>
            defaultNumItems
        </param-name>
        <param-value>
            20
        </param-value>
    </context-param>
    <context-param>
        <param-name>
            maxCommentNesting
        </param-name>
        <param-value>
            5
        </param-value>
    </context-param>
    <context-param>
        <param-name>
            activeRSSPath
        </param-name>
        <param-value>
            /active.xml
        </param-value>
    </context-param>
    <context-param>
        <param-name>
            newRSSPath
        </param-name>
        <param-value>
            /new.xml
        </param-value>
    </context-param>

    <context-param>
        <param-name>
            appID
        </param-name>
        <param-value>
            102923989756957
        </param-value>
    </context-param>

    <context-param>
        <param-name>
            appSecretID
        </param-name>
        <param-value>
            5668848d0df6e0bdb8edd305b0143a57
        </param-value>
    </context-param>

</web-app>
